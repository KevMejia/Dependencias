@model Dependencias.Models.DEPENDENCIASAUXILIARES

<h2>Modificar Registro</h2>

@using (Html.BeginForm("ModificarDepAux", "Dependencias", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Dependencias Auxiliares</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.CLAVEDEPENDENCIA)
        @Html.HiddenFor(model => model.ANIOOPERACION)
        @Html.HiddenFor(model => model.CLAVEDEPENDENCIAAUXILIAR)

        <div class="form-group">
            <label class="control-label col-md-2">Nombre de la Dependencia Auxiliar</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBREDEPENDENCIAAUXILIAR)
                @Html.ValidationMessageFor(model => model.NOMBREDEPENDENCIAAUXILIAR)
            </div>
        </div>

        @Html.HiddenFor(model => model.USUARIOCAPTURA, new { @Value = @User.Identity.Name })
        @Html.HiddenFor(model => model.FECHACAPTURA, new { @Value=@DateTime.Now.ToShortDateString() })

        <div class="form-group">
            <label class="control-label col-md-2">Status de Dependencias Generales</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.STATUSDEPENDENCIASGENERALES)
                @Html.ValidationMessageFor(model => model.STATUSDEPENDENCIASGENERALES)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}