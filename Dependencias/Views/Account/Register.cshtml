@model Dependencias.Models.RegisterViewModel
@{
    ViewBag.Title = "Nuevo Usuario";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Crea una nueva cuenta.</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
       @* @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })*@
        <label class="col-md-2 control-label">Nombre de Usuario</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @maxlength = "20" })
        </div>
    </div>
    <div class="form-group">
       @* @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
        <label class="col-md-2 control-label">Contraseña</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
       @* @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })*@
        <label class="col-md-2 control-label">Confirmar Contraseña</label>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
</div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Registrar usuario" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
