@model Dependencias.Models.DEPENDENCIASGENERALES

@{
    ViewBag.Title = "Crear Dependencia General";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @*@Html.LabelFor(model => model.ANIOOPERACION, new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2"> Año de Operación</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ANIOOPERACION)
                @Html.ValidationMessageFor(model => model.ANIOOPERACION)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.CLAVEDEPENDENCIAGENERAL, new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2"> Clave de Dependencia General</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CLAVEDEPENDENCIAGENERAL)
                @Html.ValidationMessageFor(model => model.CLAVEDEPENDENCIAGENERAL)
            </div>
        </div>

        <div class="form-group">
           @* @Html.LabelFor(model => model.NOMBREDEPENDENCIAGENERAL, new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2"> Nombre de la Dependencia General</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOMBREDEPENDENCIAGENERAL)
                @Html.ValidationMessageFor(model => model.NOMBREDEPENDENCIAGENERAL)
            </div>
        </div>

        <div class="form-group">
           @* @Html.LabelFor(model => model.USUARIOCAPTURA, new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2"> Usuario que Captura</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.USUARIOCAPTURA, new { @Value = @User.Identity.Name, disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.USUARIOCAPTURA)
            </div>
        </div>

        <div class="form-group">
           @* @Html.LabelFor(model => model.FECHACAPTURA, new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2"> Fecha de Captura</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FECHACAPTURA, new { @Value= @DateTime.Now, disabled="disabled" })
                @Html.ValidationMessageFor(model => model.FECHACAPTURA)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a los Registros", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}